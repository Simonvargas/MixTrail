extends layout
include utils.pug

append head
    link(rel="stylesheet" href="/stylesheets/signup.css")
block content
    div(class="container")
        aside(class="color-block")
            p Discover the worldâ€™s best hikes!
        div(class="form-container")
            +validationErrorSummary(errors)
            form(action="/signup" method="post" id="signup" class="signup-form")
                input(type="hidden" name="_csrf" value=csrfToken)
                br
                h1 Sign up to Mix Trail
                input(type="type" name="username" placeholder="Username" class="username")
                br
                input(type="email" name="email" placeholder="Email" class="email" )
                br
                input(type="password" name="password" placeholder="Password" class="password")
                br
                input(type="password" name="confirmPassword" placeholder="Confirm Password" class="password box-input")
                button(type="submit" class="signup-btn") Create Account
