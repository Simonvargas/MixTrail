extends layout

append head


        link(rel="stylesheet" href="/stylesheets/login.css")
    block content 
        form(action="/signup" method="post" id="signup" class="signup-user")
        

                 input(type="hidden" name="_csrf" value=token)
                br
                input(type="" name="email" placeholder="Email" class="email box-input" )
                br
                input(type="email" name="email" placeholder="Email" class="email box-input" )
                br
                input(type="password" name="password" placeholder="Password" class="password box-input")
                br
                input(type="password" name="password" placeholder="Confirm Password" class="password box-input")
                button(type="submit" class="signup-button") Sign Up
            